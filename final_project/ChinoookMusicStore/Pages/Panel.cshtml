@page
@model ChinookMusicStore.Pages.PanelModel

<!DOCTYPE html>
<html>
<head>
    <title>Welcome to the Panel</title>

    <style>
        :root {
        --text-font-family: "Arimo", Arial, sans-serif;
        --background-color: #d0d0d0;
        --brand-accent-color: #0199ca;
        --error-background-color: #eaad99;
        --box-border-radius:0.5rem;
        }

        *,
        *::before,
        *::after {
          box-sizing: border-box;
          margin: 0;
          padding: 0;
        }
        body {
            padding-top: 6rem;
            font-family: var(--text-font-family);
            height: 100vh;
            background-color: var(--background-color);
        }
        .navbar {
            background-color: var(--background-color);
            position: fixed;
            top: 0;
            width: 100dvw;
            max-height: 5rem;
            padding: 0 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        #branding-section {
          scale: 0.5;
        }
        #logout-btn {
            background-color: #dc3545;
            color: #fff;
            padding: 8px 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .logout-btn:hover {
            background-color: #c82333;
        }
        .container {
            display: flex;
            flex-direction: row;
            margin: 20px;
        }
        .left-column {
            flex: 30%;
            padding: 10px;
        }
        .right-column {
            flex: 70%;
            padding: 10px;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            grid-gap: 10px;

            .button {
                aspect-ratio: 1/1;
                display: flex;
                flex-direction: column;
                justify-content: center;
                background-color: #007bff;
                color: #fff;
                padding: 20px;
                text-align: center;
                border-radius: 5px;
                cursor: pointer;
            }
            .button:hover {
                background-color: #0056b3;
            }
        }
    </style>
</head>
<body>
 <div class="navbar">
        @await Html.PartialAsync("_LogoPartialView")
        <div>Logged in Admin: John Doe</div>
        <form method="POST" action="~/Panel">
          @Html.AntiForgeryToken()
            <button id="logout-btn" type="submit">Log out</button>
        </form>
    </div>
    <div class="container">
        <div class="left-column">
            <ul>
                <li>Albums in the database: ##</li>
                <li>Artists in the database: ##</li>
                <li>Playlists in the database: ##</li>
                <li>Tracks in the database: ##</li>
                <li>Customers: ##</li>
            </ul>
        </div>
        <div class="right-column">
            <div class="button">Button 1</div>
            <div class="button">Button 2</div>
            <div class="button">Button 3</div>
            <div class="button">Button 4</div>
            <div class="button">Button 5</div>
            <div class="button">Button 6</div>
            <div class="button">Button 7</div>
            <div class="button">Button 8</div>
            <div class="button">Button 9</div>
            <div class="button">Button 10</div>
        </div>
    </div>
         
</body>
  <script>
    window.onscroll = function() {scrollFunction()};

function scrollFunction() {
  let navbar = document.querySelector(".navbar");
  if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
    navbar.style.boxShadow = "0 0.5rem 1rem rgba(0, 0, 0, 0.25)";
  } else {
    navbar.style.boxShadow = "none";
  }
}
  </script>
</html>
