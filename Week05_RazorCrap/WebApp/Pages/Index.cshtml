@page
@model WebApp.Pages.ViewActors
@using FilmEntities
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Web App</title>
</head>

<body>
    <h1>@Model.Heading</h1>
    <table border="1">
        <tr>
            <th>Actor ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>&nbsp;</th>
        </tr>
        @foreach (Actor actor in @Model.Actors)
        {
            <tr>
                <td>@actor.ActorID</td>
                <td>@actor.Firstname</td>
                <td>@actor.Lastname</td>
                <td>
                    <form action="~/Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="hdnActorID" value="@actor.ActorID">
                        <input type="submit" value="Delete">
                    </form>
                </td>
            </tr>
        }
    </table>
    <form action="~/Insert" method="post">
        @Html.AntiForgeryToken()
        <p>First Name: <input type="text" name="tbxFirstname"></p>
        <p>Last Name: <input type="text" name="tbxLastname"></p>
        <p><input type="submit" value="Insert"></p>
    </form>
</body>

</html>